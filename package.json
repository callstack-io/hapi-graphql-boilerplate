{
  "name": "hapi-graphql-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Hapi.js based Apollo GraphQL boilerplate",
  "bugs": {
    "url": "https://github.com/mike866/hapi-graphql-boilerplate/issues"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run check && node internals/scripts/run.js",
    "start-dev": "npm run check && npm run watch",
    "watch": "nodemon internals/scripts/run.js",
    "check": "npm run lint && npm run flow",
    "test": "npm run check && jest",
    "flow": "node_modules/.bin/flow check",
    "lint": "eslint . --ext .js"
  },
  "author": "Mike Chudziak (mike866)",
  "homepage": "https://github.com/mike866/hapi-graphql-boilerplate#readme",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/mike866/hapi-graphql-boilerplate.git"
  },
  "keywords": [
    "hapi",
    "graphql",
    "apollo",
    "server",
    "boilerplate"
  ],
  "dependencies": {
    "graphql-server-hapi": "^0.4.4",
    "babel-plugin-inline-import": "^2.0.4",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "bcryptjs": "^2.3.0",
    "casual": "^1.5.6",
    "dataloader": "^1.2.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "glue": "^4.0.0",
    "good": "^7.0.2",
    "good-console": "^6.3.1",
    "good-squeeze": "^5.0.0",
    "graphql": "^0.8.2",
    "graphql-tools": "^0.8.0",
    "hapi": "^16.1.0",
    "hapi-auth-basic": "^4.2.0",
    "joi": "^10.1.0",
    "mongoose": "^4.6.5"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.18.0",
    "blipp": "^2.3.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.5.0",
    "flow-bin": "^0.37.4",
    "jest-cli": "^18.1.0",
    "nodemon": "^1.11.0"
  },
  "babel": {
    "presets": [
      "stage-3",
      "node6"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "babel-plugin-inline-import"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/prefer-default-export": 0,
      "newline-per-chained-call": 0,
      "arrow-parens": 0
    }
  }
}
